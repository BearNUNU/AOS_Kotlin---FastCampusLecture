<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/textInput"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:hint="0.0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="9"/>
<TextView
    android:id="@+id/textInputUnit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="cm"
    android:textSize="20sp"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    app:layout_constraintStart_toEndOf="@+id/textInput"
    app:layout_constraintBottom_toBottomOf="@+id/textInput"

    />
    <TextView
        android:id="@+id/textOutput"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="0.0"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textInput"
        app:layout_constraintStart_toStartOf="@+id/textInput"
        app:layout_constraintTop_toBottomOf="@+id/textInput" />
    <TextView
        android:id="@+id/textOutputUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/textOutput"
        app:layout_constraintBottom_toBottomOf="@+id/textOutput"
        />

    <Button
        android:id="@+id/buttonUnitConverter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단위 교체"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/textInput"
        app:layout_constraintStart_toStartOf="@+id/textInput"
        app:layout_constraintTop_toBottomOf="@+id/textOutput" />
</androidx.constraintlayout.widget.ConstraintLayout>